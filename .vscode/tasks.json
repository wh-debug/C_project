{
    "tasks": [
        {
            "type": "shell",
            "label": "Compile & Link",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}", // the current opened file
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}.out" //the current opened file's basename with no file extension
            ],
            "options": {
                "cwd": "${fileDirname}"  // ${fileDirname} - the current opened file's dirname
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}